<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1</TargetFrameworks>
    <SignAssembly>True</SignAssembly>
    <AssemblyOriginatorKeyFile>MonitoringSign.snk</AssemblyOriginatorKeyFile>
    <Version>1.20.5</Version>
    <RootNamespace>Diga.WebView2.Monitoring</RootNamespace>
    <Authors>Dipl.-Ing.(FH) Guido Agnesmeyer</Authors>
    <Company>Dipl.-Ing.(FH) Guido Agnesmeyer</Company>
    <Copyright>Copyright Â© 2023 Dipl.-Ing.(FH) Guido Agnesmeyer</Copyright>
    <PackageId>Diga.WebView2.Monitoring</PackageId>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageRequireLicenseAcceptance>True</PackageRequireLicenseAcceptance>
    <PackageProjectUrl>https://github.com/ITAgnesmeyer/Diga.WebView2</PackageProjectUrl>
    <PackageIcon>logo.png</PackageIcon>
    <RepositoryUrl>https://github.com/ITAgnesmeyer/Diga.WebView2</RepositoryUrl>
    <AssemblyName>Diga.WebView2.Monitoring</AssemblyName>
    <RepositoryType>git</RepositoryType>
    <AssemblyVersion>1.20.3</AssemblyVersion>
    <FileVersion>1.20.3</FileVersion>
    <Description>Monitoring Extension</Description>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="MimeTypeExtension" Version="1.0.29" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Diga.WebView2.Interop\Diga.WebView2.Interop.csproj" />
    <ProjectReference Include="..\Diga.WebView2.Wrapper\Diga.WebView2.Wrapper.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="WebResoruces.Designer.cs">
      <DesignTime>True</DesignTime>
      <AutoGen>True</AutoGen>
      <DependentUpon>WebResoruces.resx</DependentUpon>
    </Compile>
  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="WebResoruces.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <LastGenOutput>WebResoruces.Designer.cs</LastGenOutput>
    </EmbeddedResource>
  </ItemGroup>

  <ItemGroup>
    <None Include="logo.png" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
