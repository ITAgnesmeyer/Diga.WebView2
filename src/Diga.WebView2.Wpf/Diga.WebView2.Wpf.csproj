<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0-windows;net7.0-windows;net4.7.2</TargetFrameworks>
	<RootNamespace>Diga.WebView2.Wpf</RootNamespace>
	  <AssemblyName>Diga.WebView2.Wpf</AssemblyName>
	  <UseWPF>true</UseWPF>
	  <Version>20.1.2</Version>
	  <Authors>Dipl.-Ing.(FH) Guido Agnesmeyer</Authors>
	  <Product>Diga.WebView2.Wpf</Product>
	  <Copyright>Copyright © 2023 Dipl.-Ing.(FH) Guido Agnesmeyer</Copyright>
	  <PackageLicenseExpression>MIT</PackageLicenseExpression>
	  <SignAssembly>true</SignAssembly>
	  <DelaySign>false</DelaySign>
	  <AssemblyOriginatorKeyFile>WinFormCoreSign.snk</AssemblyOriginatorKeyFile>
	  <PackageId>Diga.WebView2.Wpf</PackageId>
	  <PackageProjectUrl>https://github.com/ITAgnesmeyer/Diga.WebView2</PackageProjectUrl>
	  <PackageTags>WebView2, WebView</PackageTags>
	  <RepositoryUrl>https://github.com/ITAgnesmeyer/Diga.WebView2</RepositoryUrl>
	  <PackageIcon>logo.png</PackageIcon>
  </PropertyGroup>
	<PropertyGroup>
		<DisableImplicitNamespaceImports>true</DisableImplicitNamespaceImports>
	</PropertyGroup>
	<ItemGroup>
	  <Compile Remove="Scripting\**" />
	  <EmbeddedResource Remove="Scripting\**" />
	  <None Remove="Scripting\**" />
	  <Page Remove="Scripting\**" />
	</ItemGroup>
	<ItemGroup>
	  <PackageReference Include="Diga.Core.Json" Version="1.0.2" />
	  <PackageReference Include="Diga.Core.Threading" Version="1.0.11" />
	  <PackageReference Include="MimeTypeExtension" Version="1.0.30" />
	  <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
	</ItemGroup>
	<ItemGroup>
		<None Include="logo.png" Pack="true" PackagePath="\" />
	</ItemGroup>
	<ItemGroup>
	  <ProjectReference Include="..\Diga.WebView2.Monitoring\Diga.WebView2.Monitoring.csproj" />
	  <ProjectReference Include="..\Diga.WebView2.Scripting\Diga.WebView2.Scripting.csproj" />
	  <ProjectReference Include="..\Diga.WebView2.Wrapper\Diga.WebView2.Wrapper.csproj" />
	</ItemGroup>
	<ItemGroup>
	  <Compile Update="Properties\Resources.Designer.cs">
	    <DependentUpon>Resources.resx</DependentUpon>
	    <DesignTime>True</DesignTime>
	    <AutoGen>True</AutoGen>
	  </Compile>
	  <Compile Update="WebView.Events.cs">
	    <SubType>UserControl</SubType>
	  </Compile>
	  <Compile Update="WebView.Functions.cs">
	    <SubType>UserControl</SubType>
	  </Compile>
	  <Compile Update="WebView.Monitoring.cs">
	    <SubType>UserControl</SubType>
	  </Compile>
	  <Compile Update="WebView.Properties.cs">
	    <SubType>UserControl</SubType>
	  </Compile>
	  <Compile Update="WebView.Scripting.cs">
	    <SubType>UserControl</SubType>
	  </Compile>
	</ItemGroup>
	<ItemGroup>
	  <EmbeddedResource Update="Properties\Resources.resx">
	    <SubType>Designer</SubType>
	    <CustomToolNamespace>Diga.WebView2.Wpf.Properties</CustomToolNamespace>
	    <LastGenOutput>Resources.Designer.cs</LastGenOutput>
	    <Generator>PublicResXFileCodeGenerator</Generator>
	    <CopyToOutputDirectory>Never</CopyToOutputDirectory>
	  </EmbeddedResource>
	</ItemGroup>
	
</Project>
